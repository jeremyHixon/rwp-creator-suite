{
	"name": "rwp/creator-suite",
	"description": "A suite of tools for content creators including Instagram follower analysis.",
	"type": "wordpress-plugin",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6",
		"yoast/phpunit-polyfills": "^2.0",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"brain/monkey": "^2.6",
		"mockery/mockery": "^1.6"
	},
	"scripts": {
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html coverage/",
		"lint": "phpcs --standard=WordPress src/ rwp-creator-suite.php",
		"lint:fix": "phpcbf --standard=WordPress src/ rwp-creator-suite.php",
		"install-wp-tests": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload-dev": {
		"psr-4": {
			"RWP\\CreatorSuite\\Tests\\": "tests/"
		}
	},
	"extra": {
		"wordpress-install-dir": "/tmp/wordpress/",
		"wordpress-theme-dir": "/tmp/wordpress/wp-content/themes/"
	}
}