{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "rwp-creator-suite/content-repurposer",
	"version": "1.0.0",
	"title": "Content Repurposer",
	"category": "rwp-creator-suite",
	"icon": "admin-post",
	"description": "Transform long-form content into platform-specific social media posts using AI.",
	"example": {},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"align": {
			"type": "string"
		},
		"platforms": {
			"type": "array",
			"default": ["twitter", "linkedin"],
			"items": {
				"type": "string",
				"enum": ["instagram", "tiktok", "twitter", "linkedin", "facebook"]
			}
		},
		"tone": {
			"type": "string",
			"default": "professional"
		},
		"showUsageStats": {
			"type": "boolean",
			"default": true
		}
	},
	"textdomain": "rwp-creator-suite",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./index.css"
}